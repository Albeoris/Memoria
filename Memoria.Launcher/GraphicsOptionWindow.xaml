<Window
    x:Class="Memoria.Launcher.GraphicsOptionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:launcher="clr-namespace:Memoria.Launcher"
    Title="{Binding WindowTitle, FallbackValue='Graphics Option'}"
    Width="900"
    Height="700"
    BorderThickness="0"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="SingleBorderWindow">
    <Grid>
        <Image
            x:Name="Launcher"
            Height="800"
            VerticalAlignment="Top"
            Source="/Images/new_launcher_bg.png" />

        <launcher:ShaderSettingControl
            x:Name="GameSettings"
            Width="260"
            Height="300"
            Margin="30,0,0,100"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom" />
    </Grid>
</Window>
