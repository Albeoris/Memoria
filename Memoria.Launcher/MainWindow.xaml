<Window
    x:Class="Memoria.Launcher.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:launcher="clr-namespace:Memoria.Launcher"
    Title="Final Fantasy IX Launcher"
    Width="800"
    Height="600"
    BorderThickness="0"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="SingleBorderWindow">
    <Grid>
        <Image
            x:Name="Launcher"
            Width="800"
            Height="600"
            VerticalAlignment="Top"
            MouseDown="Launcher_MouseDown"
            Source="/Images/new_launcher_bg.png" />

        <launcher:GameSettingsControl
            x:Name="GameSettings"
            Width="Auto"
            Height="326"
            Margin="27,0,573,-43"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom" />
        <launcher:MemoriaIniControl
            x:Name="MemoriaIniControl"
            Width="Auto"
            Height="290"
            Margin="265,0,305,24"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Bottom" />
        <launcher:MemoriaIniCheatControl
            x:Name="MemoriaIniCheatControl"
            Width="228"
            Height="290"
            Margin="0,0,32,25"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom" />

        <Rectangle Visibility="{Binding BlueRectVisibility, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type launcher:UiModManagerButton}}}" Margin="491,30,36,396">
            <Rectangle.Style>
                <Style TargetType="{x:Type Rectangle}">
                    <Setter Property="Fill" Value="#bb111111"/>
                </Style>
            </Rectangle.Style>
        </Rectangle>
        <launcher:UiLauncherPlayButton
            x:Name="PlayButton"
            Width="240"
            Height="72"
            Margin="0,0,44,451"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom" />
        <launcher:UiLauncherModManagerButton
            Width="240"
            Height="36"
            Margin="0,0,44,407"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Content="" />

    </Grid>
</Window>